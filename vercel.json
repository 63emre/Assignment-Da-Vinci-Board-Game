{
  "version": 2,
  "builds": [
    {
      "src": "project/backend/dist/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "project/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "project/backend/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "project/frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "project/backend/dist/main.js": {
      "runtime": "nodejs18.x"
    }
  },
  "buildCommand": "cd project/backend && npm install && npm run build && cd ../frontend && npm install && npm run build"
}
