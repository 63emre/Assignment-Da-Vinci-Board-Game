{
  "version": 2,
  "builds": [
    {
      "src": "project/backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "project/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "project/backend/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "project/frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
